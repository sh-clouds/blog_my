<% @articles.each do |article| %>
<h3><%= article.title %></h3>
<p><%= article.text %></p>
<p>
	<%= link_to  'Show', article_path(article) %> | 
	<%= link_to  'Edit', edit_article_path(article) %>

	<%= button_to 'Destroy', article_path(article), method: :delete, data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>

</p>


  <hr>
<% end %>